<%- include('partials/header') %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1 class="text-center" style="font-family: 'Montserrat', sans-serif;">Forgot Password</h1>
      <form action="/forgot-password" method="post">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" class="form-control" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="securityQuestion">Security Question</label>
          <select class="form-control" id="securityQuestion" name="securityQuestion" required>
            <option value="" disabled selected>Select your security question</option>
            <option value="q1">What is your mother's maiden name?</option>
            <option value="q2">What was the name of your first pet?</option>
            <option value="q3">What was the name of your elementary school?</option>
          </select>
        </div>
        <div class="form-group">
          <label for="securityAnswer">Answer</label>
          <input type="text" class="form-control" id="securityAnswer" name="securityAnswer" required>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </form>
      <div class="text-center mt-4">
        <a href="/login" class="btn btn-secondary">Back to Login</a>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>
